<style>
  @import url("https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap");


.img_blog {
max-width: 100%;
display: block;
object-fit: cover;
}

.blog_card {
display: flex;
flex-direction: column;
width: clamp(19rem, calc(19rem + 2vw), 19rem);
overflow: hidden;
box-shadow: 0 .1rem 1rem rgba(0, 0, 0, 0.1);
border-radius: 1em;
background: #ECE9E6;
background: linear-gradient(to right, #FFFFFF, #ECE9E6);
}
.blog_card1 {
display: flex;
flex-direction: column;

overflow: hidden;
box-shadow: 0 .1rem 1rem rgba(0, 0, 0, 0.1);
border-radius: 1em;
background: #ECE9E6;
background: linear-gradient(to right, #FFFFFF, #ECE9E6);

}


.blogcard_body {
padding: 1rem 0rem 0rem 0rem;
display: flex;
flex-direction: column;
gap: .5rem;
}


.blog_tag {
align-self: flex-start;
padding: .25em .75em;
border-radius: 1em;
font-size: .75rem;
}
.readmore{
border-radius: 0.5em;
font-size: .45rem;
}
.tag + .tag {
margin-left: .5em;
}


.tag-red {
background: #cb2d3e;
background: linear-gradient(to bottom, #ef473a, #cb2d3e);
color: #fafafa;
}
.tag-blue {
background: #087df3;
color: #fafafa;
}
a{
text-decoration: none;
 outline:  none;
}

.blogcard_body h4 {
font-size: 1.5rem;
text-transform: capitalize;
}

.blog_footer {
display: flex;
padding: 0.3rem;
margin-top: auto;
}

.user_blog {
display: flex;
gap: .5rem;
}

.user__image_blog {
border-radius: 50%;
}

.user__info_blog > small {
color: #666;
}

#collectibles{
	width: 100%;
	display: flex;
	justify-content: center;
	align-content:center;
	flex-direction: column;
	text-align:  center;
	margin-bottom: 4rem;
}

.heading{
	margin: 1rem auto;
	text-align:  center;
}

.para {
	margin: 1rem auto;
}

.num {
    width: 70%;
    margin: 1rem auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.num-item {
    font-size: 1.5rem;
    line-height: 1.4rem;
    color: rgb(43, 126, 199);
}

#home{
	width: 100%;
	padding: 3rem;
	display: flex;
	flex-wrap: wrap;
	align-items: center;
	justify-content: space-around;
}

.home-left{
	height:100%;
	position: relative;
}

.home-left img{
	height: 350px;
	width: 450px;
	border-radius: 10px;
}

.home-right{
	width: 50%;
}

.home-heading{
	font-size: 2rem;
	margin-bottom: 10px;
}

.home-para{
	margin-bottom: 20px;
}

#weather{
    width: 80%;
    margin: 2rem auto;
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
    align-items: center;
}

.weather-left {
    width: 60%;
    line-height: 2rem;
}

.weather-left h2 {
    font-size: 2.4rem;
}

.weather-left p {
    line-height: 1.5rem;
    margin: 1rem 0;
}


.weather-right {
    position: relative;
    width: 35%;
}

.weather-right img {
    width: 100%;
    cursor: pointer;
    border-radius: 10px;
    filter: drop-shadow(3px 4px 5px black);
    transition: all 0.2s linear;
}

.weather-right img:hover {
    transform: translateY(-5px);
    filter: drop-shadow(5px 6px 7px black);
}

</style>
