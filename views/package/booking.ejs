<%- include("../conn/header.ejs") %> <%- include("../frontviewComm/navbar.ejs")
%>

<div class="container-fluid">
  <div class="card" style="display: flex; flex-direction: row">
    <div class="col-lg-9" style="max-width: 70% !important; height: 100%">
      <img
        src="https://q4launch.com/wp-content/uploads/2018/05/booking-travel-1.jpg"
        class="mt-5 pt-5"
        style="width: 100%; height: 100%"
        alt=""
      />
    </div>
    <div class="col-lg-3">
      <div class="booking_form mt-5 pt-3">
        <form action="/booking" method="post" class="mt-5">
          <h5>Book <%=pack.packageTitle %></h5>
          <% if(pack.packageSlot-pack.packageSlotUsed>0){ %>
          <p>only <%=pack.packageSlot-pack.packageSlotUsed %> slots Left</p>

          <div class="row">
            <div class="col-sm-12">
              <!-- text input -->
              <div class="form-group">
                <label>Select Date</label>
                <input type="date" class="form-control" name="booking_date" />
              </div>
            </div>

            <script>
              $(document).on("keyup", "#slot", function () {
                //...code...
                var slot = Number(document.getElementById("slot").value);
                window.value = slot;
              });
            </script>
            <div class="col-sm-12">
              <!-- text input -->
              <div class="form-group">
                <label>Passenger Details</label>
              </div>
            </div>

            <div class="col-sm-6">
              <!-- text input -->
              <div class="form-group">
                <label>Passenger 1</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Name of passenger"
                  name="p_name"
                  required
                />
              </div>
            </div>
            <div class="col-sm-6">
              <!-- text input -->
              <div class="form-group">
                <label>Age</label>
                <input
                  type="number"
                  class="form-control"
                  placeholder="Age"
                  name="p_age"
                  required
                />
              </div>
            </div>
            <% if(pack.packageSlot-pack.packageSlotUsed>1){ %>
            <div class="col-sm-6">
              <!-- text input -->
              <div class="form-group">
                <label>Passenger 2</label>
                <input
                  type="text"
                  class="form-control"
                  placeholder="Name of passenger"
                  name="p_name2"
                />
              </div>
            </div>
            <div class="col-sm-6">
              <!-- text input -->
              <div class="form-group">
                <label>Age</label>
                <input
                  type="number"
                  class="form-control"
                  placeholder="Age"
                  name="p_age2"
                />
              </div>
            </div>

            <% } %>
            <div class="col-sm-12">
              <!-- text input -->
              <div class="form-group">
                <label>Contact No</label>
                <input
                  type="phone"
                  class="form-control"
                  placeholder="phone number"
                  name="contact"
                />
              </div>
            </div>
            <div class="col-sm-12">
              <!-- text input -->
              <div class="form-group">
                <label>Address</label>
                <input
                  type=" text"
                  class="form-control"
                  placeholder="Adrress"
                  name="address"
                />
              </div>
            </div>
            <div class="col-sm-12">
              <!-- text input -->
              <div class="form-group">
                <label>City</label>
                <input
                  type=" text"
                  class="form-control"
                  placeholder="city"
                  name="city"
                />
              </div>
            </div>
            <div class="col-sm-4">
              <!-- text input -->
              <div class="form-group">
                <label>State</label>
                <input
                  type=" text"
                  class="form-control"
                  placeholder="state"
                  name="state"
                />
              </div>
            </div>
            <div class="col-sm-4">
              <!-- text input -->
              <div class="form-group">
                <label>Country</label>
                <input
                  type=" text"
                  class="form-control"
                  placeholder="country"
                  name="country"
                />
              </div>
            </div>
            <div class="col-sm-4">
              <!-- text input -->
              <div class="form-group">
                <label>zip</label>
                <input
                  type="number"
                  class="form-control"
                  placeholder="zip"
                  name="zip"
                />
              </div>
            </div>
            <input type="hidden" name="packageId" value="<%= pack._id%>" />
            <input
              type="hidden"
              name="amount"
              value="<%= pack.packagePrice%>"
            />
            <div class="col-sm-">
              <!-- text input -->
              <div class="form-group">
                <button
                  style="background-color: rgb(249, 200, 37); outline: none"
                  type="submit"
                  class="btn btn-primary"
                  value="<%=pack._id%>"
                >
                  Book a Slot
                </button>
              </div>
            </div>
          </div>
        </form>
        <% }else{ %>
        <h1>Sorry No Slots Left</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include("../frontviewComm/footer.ejs") %>
